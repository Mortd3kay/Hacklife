<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/post_shape">

    <TextView
        android:id="@+id/post_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Велодорожка в парке"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/addr_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Санкт-Петербург Светлановский пр.1"
        android:textColor="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/post_label"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Статус: Не утверждено"
        android:layout_marginVertical="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addr_label"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:54"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp"
        app:layout_constraintBaseline_toBaselineOf="@id/post_label"/>

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13"
        android:textSize="20sp"
        android:paddingBottom="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="+"
        android:layout_margin="10dp"
        android:textColor="@color/colorPrimary2"
        android:textSize="40sp"
        app:layout_constraintEnd_toStartOf="@id/counter"
        app:layout_constraintBottom_toBottomOf="@id/counter"/>


</androidx.constraintlayout.widget.ConstraintLayout>