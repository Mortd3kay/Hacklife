<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LoginFragment">

    <Button
        android:id="@+id/adm_to_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пользователь"
        android:textAllCaps="false"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        style="@style/btn_style"/>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/ic_parker_text"
        android:layout_above="@id/label_adm"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/label_adm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Администрация"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/email_admLogin_input"
        android:layout_marginBottom="50dp"
        android:textSize="25sp"/>

    <EditText
        android:id="@+id/email_admLogin_input"
        style="@style/inputs_style"
        android:hint="Почта"
        android:layout_marginHorizontal="30dp"
        android:layout_centerInParent="true"/>

    <EditText
        android:id="@+id/pass_admLogin_input"
        style="@style/inputs_style"
        android:hint="Пароль"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="15dp"
        android:layout_below="@id/email_admLogin_input"/>

    <Button
        android:id="@+id/adm_login_btn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Вход"
        android:layout_below="@id/pass_admLogin_input"
        android:layout_centerHorizontal="true"
        style="@style/btn_style"/>

    <Button
        android:id="@+id/adm_reg_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Регистрация"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"
        style="@style/btn_style"/>


</RelativeLayout>